[Unit]
Description=The Keycloak Server
After=syslog.target network.target
Before=httpd.service

[Service]
Environment=LAUNCH_JBOSS_IN_BACKGROUND=1
#Environment=KC_BOOTSTRAP_ADMIN_USERNAME=
#Environment=KC_BOOTSTRAP_ADMIN_PASSWORD=
User=keycloak
Group=keycloak
LimitNOFILE=102642
PIDFile=/run/keycloak/keycloak.pid
ExecStart=/etc/keycloak/bin/kc.sh start
StandardOutput=null

[Install]
WantedBy=multi-user.target